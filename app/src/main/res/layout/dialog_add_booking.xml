<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- EditText for Booking Type -->
    <EditText
        android:id="@+id/edit_text_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Booking Type (e.g., Flight, Hotel)"
        android:textSize="18sp" />

    <!-- EditText for Booking Details -->
    <EditText
        android:id="@+id/edit_text_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Booking Details"
        android:textSize="18sp"
        android:layout_marginTop="10dp" />

    <!-- Horizontal LinearLayout for Save and Cancel buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <!-- Save Button -->
        <Button
            android:id="@+id/button_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save" />

        <!-- Space between the buttons -->
        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content" />

        <!-- Cancel Button -->
        <Button
            android:id="@+id/button_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel" />
    </LinearLayout>
</LinearLayout>
